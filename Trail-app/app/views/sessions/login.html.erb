<h1>Log In</h1>

<%= video_tag "Camping.mp4", autoplay: :autoplay,
loop: :loop, id: "landing-video" %>

<% if flash[:failed_login] %>
  <%= flash[:failed_login] %>
<% end %>

<%= form_tag('/login') do %>
  <%= label_tag  "User Name" %>
  <%= text_field_tag :username %>
  <%= label_tag "Password"%>
  <%= password_field_tag :password %>
  <%= submit_tag "Submit"%>
<%end%>

<br><%= button_to "Sign Up", signup_path, method: :get %>
