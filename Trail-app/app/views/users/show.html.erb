<h3><%= @user.username %></h3><br>


<div class="hikes">
<h3>My Hikes</h3>
<br>
<ul>
<% @user.trails.each do |trail| %>
  <li><%= link_to trail.name, trail_path(trail) %></li><br>
<% end %>
</ul>
</div>


<div class="reviews">
<h3>My Reviews</h3>

<ul>
    <% @user.reviews.each do |review| %><br>
    <li><%=link_to Trail.find(review.trail_id).name, "/trails/#{review.trail_id}"%></li>
      <ul>
        <li><b><%= review.comment %></b></li>
      </ul>
    <% end %>
</ul>
</div>
