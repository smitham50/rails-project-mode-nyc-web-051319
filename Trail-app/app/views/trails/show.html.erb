<h3><%= @trail.name %></h3>

<br>

<% if !@trail.imgMedium.empty?%>
  <img src=<%=@trail.imgMedium%> alt=<%=@trail.name%> height=auto width=auto><br><br>
<% end %>

<iframe width="700" height="300" frameborder="0" style="border:0"
 src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDGipspPekQG4tmYAZmqCuNArYcQSNdfyw&q=<%=@trail.geolocation%>"
 allowfullscreen>
</iframe><br><br>

<br>

Summary: <%= @trail.summary %><br><br>

Difficulty: <%= @trail.difficulty %><br><br>

Stars: <%= @trail.stars %><br><br>

Location: <%= @trail.location %><br><br>

Website: <%= link_to @trail.url, "#{@trail.url}" %><br><br>

Length: <%= "#{@trail.length} miles" %><br><br>

Ascent: <%= "#{@trail.ascent} ft." %><br><br>

Descent: <%= "#{@trail.descent} ft." %><br><br>

Highest Elevation: <%= "#{@trail.high} ft." %><br><br>

Lowest Elevation: <%= "#{@trail.low} ft." %><br><br>

Condition Status: <%= @trail.conditionStatus %><br><br>

Condition Details: <%= @trail.conditionDetails %><br><br>

Condition Date: <%= @trail.conditionDate %><br><br>

<% if logged_in? %>
  <%= button_to "Add to Your Trails", {controller: "user_trails", action: "create", trail_id: params[:id], user_id: session[:user_id]}, method: "post" %><br>
<% end %>


<h4>Reviews</h4>
<ol>
<% @trail.reviews.each do |review| %><br>
  <li><%= User.find(review.user_id).username %></li>
    <ul>
      <li>
        <%=link_to review.comment, "/show/#{review.user_id}" %>
      </li>
    </ul>

<% end  %>
</ol>
<% if logged_in? %>
<%= form_for @review do |f| %>
<%= f.hidden_field :trail_id, value: @trail.id %>
<%= f.label "Review this Trail" %>
<%= f.text_area(:comment, cols: 60, rows: 5)%>
<%= f.submit  %>
<% end %>
<% end %><br>
<%= button_to "Return to Trails", trails_path, method: "get" %>
