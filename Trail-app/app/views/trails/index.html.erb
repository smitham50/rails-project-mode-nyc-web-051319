<h3>Trails:</h3>

<%= form_tag(trails_path, method: :get) do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag ("Search") %>
<% end %>

<ul>
<% @trails.each do |trail| %>
  <% destination = trail.geolocation %>
  <li><%= link_to trail["name"], trail_path(trail) %><%= "  #{trail.distance_from_ny.round(2).to_s} miles from NYC"%></li><br>
<% end %>
</ul>
